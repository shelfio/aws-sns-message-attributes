{
  "name": "@shelf/aws-sns-message-attributes",
  "version": "1.0.2",
  "description": "Transform JSON into AWS SNS message attributes format",
  "license": "MIT",
  "repository": "shelfio/aws-sns-message-attributes",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "shelf.io"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "build": "rm -rf lib/ && yarn build:types && babel src --out-dir lib --ignore '**/*.test.ts' --extensions '.ts'",
    "build:types": "tsc --emitDeclarationOnly --declaration --isolatedModules false --allowJs false --declarationDir lib",
    "coverage": "jest --coverage",
    "lint": "eslint . --fix",
    "prepack": "yarn build",
    "test": "jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "main": "lib",
  "files": [
    "lib"
  ],
  "types": "lib/index.d.ts",
  "keywords": [
    "aws",
    "sns",
    "message attributes"
  ],
  "peerDependencies": {
    "aws-sdk": "2.x.x"
  },
  "devDependencies": {
    "@babel/cli": "7.4.3",
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "@babel/preset-typescript": "7.3.3",
    "@shelf/eslint-config": "0.3.1",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.6",
    "aws-sdk": "2.290.0",
    "babel-jest": "24.7.1",
    "eslint": "5.16.0",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "lint-staged": "8.1.5",
    "prettier": "1.17.0",
    "typescript": "3.4.4"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{html,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
